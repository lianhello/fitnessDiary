/* pages/calorie/calorie.wxss */

page {
  /* margin-bottom: 50px; */
  padding-bottom: 50px;
}

#van-dialog {
  position: fixed;
  z-index: 101 !important;
}

.van-dropdown-item {
  margin-bottom: 50px;
}

.van-loading {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
}

.buttom {
  position: fixed;
  display: flex;
  align-items: center;
  right: 0;
  bottom: 0;
  left: 0;
  background: #f7f8fa;
}

.caloriePopup .van-popup {
  height: 400rpx;
  width: 500rpx;
  top: 45% !important;
  padding: 30rpx 30rpx;
}

.calorieName {
  display: flex;
  font-size: 30px;
  margin-bottom: 30rpx;
}

.gram {
  font-size: 20px;
  color: #969799;
}

.van-popup .van-cell-group {
  position: fixed;
  display: flex;
  align-items: center;
  right: 0;
  bottom: 0;
  left: 0;
}

.van-cell-group .van-button {
  height: 48px;
  border-radius: 0;
  border: 0;
}

.clearItem {
  /* float: right; */
  margin: 10px;
  margin-bottom: 0px;
  text-align: right;
}

.rubbishIcon {
  display: inline-block;
  vertical-align: middle;
}

.clearText {
  display: inline-block;
}

.rightSlot {
  height: 100%;
  width: 100%;
  color: #fff;
  background-color: #ee0a24;
  border: 1px solid #ee0a24;
  padding: 0 9px;
  font-size: 14px;
  line-height: 62px;
  text-align: center;
}
