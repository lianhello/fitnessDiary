/* pages/my/my.wxss */
.container {
  padding: 40rpx 0;
}
.van-panel {
  margin-bottom: 20rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.contact {
  position: relative;
  display: flex;
  box-sizing: border-box;
  font-size: 16px;
  line-height: 24px;
  color: #323233;
  background-color: #fff;
  margin: 0;
  border-radius: 0;
  padding: 12px 16px;
}

.contact::after {
  border-bottom: 1px solid #ebedf0;
  border-radius: 0;
}

.contact-text {
  font-size: 16px;
  text-align: left;
  -webkit-flex: 1;
  flex: 1;
  left: 20px;
}
.contact-icon {
  margin-left: 5px;
  color: #969799;
}